<h1 class="display-4">
  <%= @trip.title %>  
  <small>
    <%= link_to "Edit", edit_trip_path(@trip), class: "btn btn-primary btn-sm" %>
  </small>
</h1>

<p class="lead">
  <%= @trip.start_date.strftime("%b %e, %Y") %> - <%= @trip.end_date.strftime("%b %e, %Y") %>
</p>

<% if @trip.pois.any? %>
  <%= render "shared/poi_list", pois: @trip.pois %>
<% else %>
  <p>No Places</p>
<% end %>
