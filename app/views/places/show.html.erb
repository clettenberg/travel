<% @date = [@place.start_date&.strftime('%A, %d %b %Y'), @place.end_date&.strftime('%A, %d %b %Y')].compact.join(' - ') %>
<%= react_component("Place", name: @place.name,
                             date: @date,
                             note: raw(@place.note),
                             point: @place.point) %>
