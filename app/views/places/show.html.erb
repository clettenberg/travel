<h1 class="display-4 text-truncate">
  <%= @place.name %>
</h1>
<h6>
  <%= [@place.start_date&.strftime('%A, %d %b %Y'), @place.end_date&.strftime('%A, %d %b %Y')].compact.join(' - ') %>
  <%= link_to "Edit", edit_place_path(@place), class: "btn btn-primary btn-sm" %>
</h6>

<hr>

<div class="row">
  <div class="trix-content col-md-6 col-sm-12">
    <% if @place.note.present? %>
      <%= raw(@place.note) %>
    <% else %>
      <p class="text-secondary font-weight-light font-italic">
        No note yet. <%= link_to "Add one!", edit_place_path(@place) %>
      </p>
    <% end %>
  </div>

  <% if @place.osm_place.present? %>
    <div class="col-md-6 col-sm-12">
      <%= react_component("Map", points: [@place.osm_place.point],
                                center: @place.osm_place.point,
                                zoom: 15) %>
    </div>
  <% end %>
</div>

<%= link_to trip_path(@place.trip), class: 'btn btn-primary btn-sm mt-3' do %>
  <i class='far fa-arrow-alt-circle-left'></i> <%= @place.trip.title %>
<% end %>
