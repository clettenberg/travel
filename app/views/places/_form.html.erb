<%= form_with(model: [trip, place], id: "new_place_form", local: true) do |form| %>
  <% if place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <%= form.hidden_field :osm_id, id: "place_osm_id" %>
    <%= form.hidden_field :osm_type, id: "place_osm_type" %>
    <%= form.hidden_field :osm_display_name, id: "place_osm_display_name" %>

    <div>
      <%= form.text_field :name, placeholder: 'Name' %>
    </div>

    <div>
      <%= form.label :start_date, "Start Date" %>
      <%= form.date_field :start_date %>
    </div>

    <div>
      <%= form.label :end_date, "End Date" %>
      <%= form.date_field :end_date %>
    </div>
  </div>

  <div>
    <%= form.hidden_field :note, id: "place_note" %>
    <trix-editor input="place_note" class="trix-content" placeholder="Note"></trix-editor>
  </div>
  <br>
  <div>
    <div class="actions">
      <%= form.submit  %>
    </div>
  </div>
<% end %>
